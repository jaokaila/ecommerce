{% extends "::base.html.twig" %}
{%block title%}{%endblock%}
{%block stylsheet%}{%endblock%}
{%block navigation%}
	<div>{{render(controller('EcommerceBundle:Public:menu'))}}</div>
{%endblock%}
{%block body%}
<div id="page-content" class="home-page">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<!-- Carousel -->
					<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
						<!-- Indicators -->
						<ol class="carousel-indicators hidden-xs">
							<li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
							<li data-target="#carousel-example-generic" data-slide-to="1"></li>
							<li data-target="#carousel-example-generic" data-slide-to="2"></li>
						</ol>
						<!-- Wrapper for slides -->
						<div class="carousel-inner">
							<div class="item active">
								<img src="{{asset('images/main-banner1-1440x550.jpg')}} "alt="First slide">
								<!-- Static Header -->
								<div class="header-text hidden-xs">
									<div class="col-md-12 text-center">
									</div>
								</div><!-- /header-text -->
							</div>
							<div class="item">
								<img src="{{asset('images/main-banner2-1440x550.jpg')}}" alt="Second slide">
								<!-- Static Header -->
								<div class="header-text hidden-xs">
									<div class="col-md-12 text-center">
									</div>
								</div><!-- /header-text -->
							</div>
							<div class="item">
								<img src="{{asset('images/main-banner3-1440x550.jpg')}}" alt="Third slide">
								<!-- Static Header -->
								<div class="header-text hidden-xs">
									<div class="col-md-12 text-center">
									</div>
								</div><!-- /header-text -->
							</div>
						</div>
						<!-- Controls -->
						{#<a class="left carousel-control" href='#carousel-example-generic' data-slide="prev">
							<span class="glyphicon glyphicon-chevron-left"></span>
						</a>
						<a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
							<span class="glyphicon glyphicon-chevron-right"></span>
						</a>#}
					</div><!-- /carousel -->
				</div>
			</div>
			
			<div class="row">
				<ul class="nav nav-tabs">
					<li class="active"><a href="#featured">Nos produits</a></li>
					
				</ul>
				<div class="tab-content">
					<div id="featured" class="tab-pane fade in active">
						<div class="products">
							
								<div class="row">
								{% for produit in produits%}
								  <div class="col-md-3">
										<div class="product">
											<div class="image">
												<a href="{{path('ecommerce_produit',{'cat':produit.categorie.nom, 'id':produit.id})}}"><img src="{{produit.images.path}}" /></a>
												<ul class="buttons">
												{% if panier[produit.id] is not defined %}
													<li><a class="btn btn-2 cart" href="{{path('ecommerce_panier',{'id':produit.id})}}"><span class="glyphicon glyphicon-shopping-cart"></span></a></li>
												{%endif%}
													{#<li><a class="btn btn-2 wishlist" href="#"><span class="glyphicon glyphicon-heart"></span></a></li>
													<li><a class="btn btn-2 compare" href="#"><span class="glyphicon glyphicon-transfer"></span></a></li>#}
												</ul>
											</div>
											<div class="caption">
												<div class="name"><h3><a href="{{path('ecommerce_produit')}}">{{produit.name}}</a></h3></div>
												<div class="price">{{produit.prix}}</div>
												<div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span></div>
											</div>
										</div>
								  </div>
								  {%endfor%}
							</div>
					</div>
				</div>
			</div>
		</div>
	
{%endblock%}
{% block javascript %}
<script>
	$(document).ready(function(){
		$(".nav-tabs a").click(function(){
			$(this).tab('show');
		});
		$('.nav-tabs a').on('shown.bs.tab', function(event){
			var x = $(event.target).text();         // active tab
			var y = $(event.relatedTarget).text();  // previous tab
			$(".act span").text(x);
			$(".prev span").text(y);
		});
	});
	</script>
{%endblock%}
