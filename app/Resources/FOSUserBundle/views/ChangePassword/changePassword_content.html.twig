{% trans_default_domain 'FOSUserBundle' %}
<div id="page-content" class="single-page">
	<div class="container">
		<div class="row">
			<div class="col-md-2"></div>
			<div class="col-md-3">
			<div class="heading"></div>
				<div class="well">
					<ul class="list-unstyled">
						<li><a href="{{path('fos_user_profile_show')}}">Mes information</a></li>
						<li><a href="{{path('fos_user_profile_edit')}}">Editer mes informations</a></li>
						<li><a href="{{path('fos_user_change_password')}}">Changer mot de passe</a></li>
						<li><a href="#">Mes factures</a></li>
						<li><a href="#">Mes adresse</a></li>
						<li><a href="{{path('fos_user_security_logout')}}">Deconnection</a></li>
					</ul>
				</div>
			</div>
	<div class="col-md-1"></div>
<div class="col-md-6">
<div class="heading"><h2>Changer mon mot de passe</h2></div>
<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
    <div class=""form-group"">
		{{ form_label(form.current_password, 'current_password')}}
		{{ form_widget(form.current_password,{'attr' :{'class':'form-control'}}) }}
	</div>
	<div class=""form-group"">
		{{ form_label(form.plainPassword, 'new password')}}
		{{ form_widget(form.plainPassword.first,{'attr' :{'class':'form-control'}}) }}
	</div>
	<div class=""form-group"">
		{{ form_label(form.plainPassword, 'repeat password')}}
		{{ form_widget(form.plainPassword.second,{'attr' :{'class':'form-control'}}) }}
	</div>
	<br />
    <div>
        <input type="submit" value="{{ 'change_password.submit'|trans }}" class="btn btn-4" />
    </div>
</form>
</div>
