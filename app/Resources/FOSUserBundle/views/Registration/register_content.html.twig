{% extends "::base.html.twig"%}
{%block navigation%}
    <div>{{render(controller('EcommerceBundle:Public:menu'))}}</div>
{%endblock%}
{%block body%}
{% trans_default_domain 'FOSUserBundle' %}
<div id="page-content" class="single-page">
<div class="container">
<div class="row">
<div class="col-lg-12">
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

<div class=""form-group"">
	{{ form_label(form.email, 'email')}}
    {{ form_widget(form.email, {'attr':{'class':'form-control', 'placeholder':'email'}}) }}
</div>
<div class=""form-group"">
	{{ form_label(form.username, 'username')}}
    {{ form_widget(form.username, {'attr':{'class':'form-control', 'placeholder':'username'}}) }}
</div>
<div class=""form-group"">
	{{ form_label(form.plainPassword,'password')}}
    {{ form_widget(form.plainPassword.first,{'attr':{'class':'form-control', 'placeholder':'password'}}) }}
    {{ form_label(form.plainPassword,'confirm password')}}
     {{ form_widget(form.plainPassword.second,{'attr':{'class':'form-control', 'placeholder':'confirm password'}}) }}

    
</div>
    <br />
        <input type="submit" value="{{ 'registration.submit'|trans }}"  class="btn btn-4"/>
 </div>
 </div>
 </div>
 </div>   
{{ form_end(form) }}
{%endblock%}